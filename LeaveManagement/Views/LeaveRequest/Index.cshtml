@model AdminLeaveRequestViewVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">

    <div class="col-md-3">
        <div class="card" style="width: 18rem;">

            <div class="card-body text-center">
                <h3 class="card-title">@Model.TotalRequests</h3>
                <h6 class="card-text">@Html.DisplayNameFor(model => model.TotalRequests)</h6>

            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card" style="width: 18rem;">

            <div class="card-body text-center">
                <h3 class="card-title text-warning">@Model.PendingRequests</h3>
                <h6 class="card-text">@Html.DisplayNameFor(model => model.PendingRequests)</h6>

            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card" style="width: 18rem;">

            <div class="card-body text-center">
                <h3 class="card-title text-success">@Model.ApprovedRequests</h3>
                <h6 class="card-text">@Html.DisplayNameFor(model => model.ApprovedRequests)</h6>

            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card" style="width: 18rem;">

            <div class="card-body text-center">
                <h3 class="card-title text-danger">@Model.RejectedRequests</h3>
                <h6 class="card-text">@Html.DisplayNameFor(model => model.RejectedRequests)</h6>

            </div>
        </div>
    </div>

</div>

<br />
<br />
<hr />
<h1>Leave Requests Log</h1>

<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                Employee Name
            </th>

            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Leave Type
            </th>
            <th>
                Date Requested
            </th>

            <th>
                Approval Status
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveRequests) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestingEmployee.FirstName) @Html.DisplayFor(modelItem => item.RequestingEmployee.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRequested)
            </td>
            <td>
                @if (item.Approved == true)
                {
                    <span class="badge badge-success">Approved</span>
                }
                else if (item.Approved == false)
                {
                    <span class="badge badge-danger">Rejected</span>
                }
                else
                {
                    <span class="badge badge-warning">Pending Approval</span>
                }
            </td>

            <td>

                <a class="btn btn-primary" asp-action="Administer" asp-route-id="@item.Id">
                    <i class="fa fa-file"></i>Administer
                </a>

            </td>
        </tr>
}
    </tbody>
</table>
